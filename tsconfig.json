{
  "compilerOptions": {
    "alwaysStrict": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dst",
    "jsx": "React",
    "newLine": "lf",
    "removeComments": true,
    "target": "ES2015"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "formatOnSave": true
  }
}
